<%- include('../partials/navbar.ejs'); %>
    
    <div class="site-section bg-dark">
      <div class="container">
        
        <div class="row">
          <div class="col-12 title-section">
            <h2 class="heading">Upcoming Match</h2>
          </div>
          <% if(message1.length > 0){ %>
            <div class="alert alert-danger"><%=message1%></div>
          <%}%>
          <% if(message2.length > 0){ %>
            <div class="alert alert-success"><%=message2%> &check;</div>
          <%}%>

          <div class="col-lg-12 mb-8">
            <div class="bg-light p-4 rounded">
              <div class="widget-body">
                  <div class="widget-vs">
                    <form action="/create-fixure" method="post">
                        <select class="form-control" name="homeTeam">
                          <option value="xyz">--select home team--</option>   
                            <% team.forEach((team) => { %>
                                <option style="color: black;" value="<%=team.name%>"><%=team.name%></option>
                            <%})%>
                        </select>
                        <input type="hidden" class="form-control" name="homeTeamGoals" value="null">
                            &nbsp;&nbsp;&nbsp;
                            <div>
                                &nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;
                                &nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;
                                <span class="vs"><span>VS</span></span>
                            </div>
                            &nbsp;&nbsp;&nbsp;
                        <select class="form-control" name="awayTeam" required>
                            <option value="xyz">--select away team--</option>
                            <% team.forEach((team) => { %>
                                <option style="color: black;" value="<%=team.name%>"><%=team.name%></option>
                            <%})%>
                        </select>
                        <input type="hidden" class="form-control" name="awayTeamGoals" value="null">
                            <br/>
                        <input type="submit" class="btn btn-primary py-3 px-5" value="Submit">
                    </form>
                  </div>
                </div>
            </div>
          </div>

        </div>
      </div>
    </div>

    <%- include('../partials/footer.ejs'); %>
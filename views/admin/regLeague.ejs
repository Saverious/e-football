<%- include('../partials/navbar.ejs'); %>

    <br/><br/><br/>
    <div class="site-section">
      <div class="container">
        <div class="row">
          <div class="col-lg-7">
            <form action="/register-league" method="post">
              <div class="form-group">
                <input type="text" class="form-control" name="leagueName" placeholder="League Name">
              </div>
              <% if(message1.length > 0){ %>
                <div class="alert alert-success"><%=message1%> &check;</div>
              <%}%>
              <% if(message2.length > 0){ %>
                <div class="alert alert-danger"><%=message2%></div>
              <%}%>
              <div class="form-group">
                <input type="submit" class="btn btn-primary py-3 px-5" value="Submit">
              </div>
            </form>  
          </div>
          <div class="col-lg-4 ml-auto">
            
            <ul class="list-unstyled">
              <li class="mb-2">
                <strong class="text-white d-block">NOTE</strong>
                Use a unique League name <br> Each league should have a minimum of 10 teams
                <br> Each league should have a maximum of 15 teams
              </li>
            </ul>
          </div>
        </div>
      </div>
    </div>

